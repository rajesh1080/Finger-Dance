<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_selected="true" >
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#d50000"
                android:centerColor="#d32f2f"
                android:endColor="#e53935"
                android:angle="270"/>
            <padding android:left="7dp"
                     android:top="7dp"
                     android:right="7dp"
                     android:bottom="7dp" />
            <stroke android:width="4dp" android:color="#ffff00"/>
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#d50000"
                android:centerColor="#d32f2f"
                android:endColor="#e53935"
                android:angle="270"/>
            <padding android:left="7dp"
                     android:top="7dp"
                     android:right="7dp"
                     android:bottom="7dp" />
            <stroke android:width="4dp" android:color="#ffff00"/>
        </shape>

    </item>
    <item  >
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#d32f2f"
                android:centerColor="#e53935"
                android:endColor="#ef5350"
                android:angle="270"/>
            <padding android:left="7dp"
                     android:top="7dp"
                     android:right="7dp"
                     android:bottom="7dp" />
        </shape>
    </item>

</selector>