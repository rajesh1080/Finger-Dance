<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_selected="true" >
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#ffeb3b"
                android:centerColor="#ffee58"
                android:endColor="#fff59d"
                android:angle="270"/>
            <padding android:left="7dp"
                     android:top="7dp"
                     android:right="7dp"
                     android:bottom="7dp" />
            <stroke android:width="4dp" android:color="#d50000"/>
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#ffeb3b"
                android:centerColor="#ffee58"
                android:endColor="#fff59d"
                android:angle="270"/>
            <padding android:left="7dp"
                     android:top="7dp"
                     android:right="7dp"
                     android:bottom="7dp" />
            <stroke android:width="4dp" android:color="#d50000"/>
        </shape>

    </item>
    <item  >
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#fff176"
                android:centerColor="#fff176"
                android:endColor="#fff59d"
                android:angle="270"/>
            <padding android:left="7dp"
                     android:top="7dp"
                     android:right="7dp"
                     android:bottom="7dp" />
        </shape>
    </item>

</selector>